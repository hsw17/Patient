<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/clist_item_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clist_circle_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:background="@mipmap/h_currency" />

            <TextView
                android:id="@+id/clist_sick_circle_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="00"
                android:textColor="#d92109"
                android:textSize="13sp" />

            <TextView
                android:textColor="@color/shoucang"
                android:id="@+id/clist_circle_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/clist_circle_tv2"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/dp_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/clist_circle_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/shoucang"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/dp_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_15"
                    android:text="收藏"
                    android:textColor="@color/shoucang"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:id="@+id/clist_item_shoucang"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="6dp"
                    android:text="收藏"
                    android:textColor="@color/shoucang"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="15dp"
                    android:text="建议"
                    android:textColor="@color/shoucang"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:textColor="@color/shoucang"
                    android:id="@+id/clist_item_jianyi"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="6dp"
                    android:text="建议"
                    android:textSize="@dimen/dp_10" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>