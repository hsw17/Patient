<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.activity.SettingActivity">
    <RelativeLayout
    android:id="@+id/relay_layout"
    android:layout_marginTop="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="@dimen/dp_26">

    <ImageView
        android:id="@+id/head_details_back"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@mipmap/common_icon_back_black_n" />
    <TextView
        android:textStyle="bold"
        android:text="设置"
        android:id="@+id/head_text_name"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_16"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22" />
</RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/setting_image_layout"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/setting_image_view"
            app:placeholderImage="@mipmap/boy"
            app:actualImageScaleType="centerInside"
            app:roundAsCircle="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/boy"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42">

        </com.facebook.drawee.view.SimpleDraweeView>
        <TextView
            android:id="@+id/setting_text_name"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/setting_image_view"
            android:layout_centerVertical="true"
            android:text="二零零"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/setting_image_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24">
            <ImageView
                android:background="@mipmap/my_icon_next_n"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/setting_image_pwd"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24">
            <ImageView
                android:background="@mipmap/my_icon_next_n"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>
    <RelativeLayout
    android:id="@+id/setting_image_clear"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_42">

    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:layout_centerVertical="true"
        android:text="清除缓存"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24">
        <TextView
            android:text="0M"
            android:id="@+id/setting_text_clear"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:background="@mipmap/my_icon_next_n"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"/>
    </LinearLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:id="@+id/setting_image_ping_lian"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:text="屏幕亮度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24">
            <ImageView
                android:background="@mipmap/my_icon_next_n"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:id="@+id/setting_image_new_app"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:text="版本检测"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24">
            <ImageView
                android:background="@mipmap/my_icon_next_n"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>
    <RelativeLayout
        android:id="@+id/setting_image_ping_help"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:text="帮助中心"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24">
            <ImageView
                android:background="@mipmap/my_icon_next_n"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
    android:id="@+id/setting_image_my"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_42">

    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:layout_centerVertical="true"
        android:text="关于我们"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24">
        <ImageView
            android:background="@mipmap/my_icon_next_n"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"/>
    </LinearLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>
    <RelativeLayout
        android:id="@+id/setting_image_new_invite"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:text="邀请好友"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24">
            <ImageView
                android:background="@mipmap/my_icon_next_n"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>
    <RelativeLayout
        android:id="@+id/setting_image_login"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#d92109"
            android:textSize="@dimen/sp_14"
            android:text="退出登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>
</LinearLayout>