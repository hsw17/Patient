<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_shape_a"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4">

    </LinearLayout>
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sim_play_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80">

        </com.facebook.drawee.view.SimpleDraweeView>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_130"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_name"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_hb"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#EC0606"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <Button
            android:id="@+id/button_sead"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/login_shape_d"
            android:text="立即赠送"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
</LinearLayout>