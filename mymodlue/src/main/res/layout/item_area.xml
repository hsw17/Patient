<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/text_name"
                android:layout_centerVertical="true"
                android:text="首发病友圈"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_hb"
                    android:text="+10"
                    android:textColor="#3087ea"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView


                    android:text="H币"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:visibility="gone"
            android:id="@+id/first_button_finish"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:background="@drawable/login_shape_b"
            android:text="已完成"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />
        <Button
            android:visibility="gone"
            android:id="@+id/first_button_go_finish"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_shape_d"
            android:text="去完成"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12" />
        <Button
            android:id="@+id/collar_button_go_finish"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_shape_e"
            android:text="领H币"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

</LinearLayout>