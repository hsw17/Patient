<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.CertificActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_24">

            <ImageView
                android:id="@+id/head_details_back"
                android:layout_width="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/common_icon_back_black_n" />
            <TextView
                android:textStyle="bold"
                android:text="实名认证"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_40">
            <ImageView
                android:id="@+id/img_id_card_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/id_card_front"/>
            <LinearLayout
                android:id="@+id/linear_id_card_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/img_camera_id_card_front"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_64"
                    android:background="@mipmap/my_icon_camera_n"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击拍摄/上传人像面"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#3087ea"
                    android:layout_marginTop="@dimen/dp_20"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_40">
            <ImageView
                android:id="@+id/img_id_card_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:background="@mipmap/id_card_back"/>
            <LinearLayout
                android:id="@+id/linear_id_card_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_camera_id_card_back"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_64"
                    android:background="@mipmap/my_icon_camera_n" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="点击拍摄/上传人像面"
                    android:textColor="#3087ea"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_next_id_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/login_shape_d"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:text="下一步"/>
    <Button
        android:id="@+id/btn_finish_id_card"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/login_shape_d"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:text="完成"/>
    <ImageView
        android:id="@+id/img_cuowu_front"
        android:visibility="gone"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/common_icon_close_n"
        android:layout_marginTop="@dimen/dp_80"/>
    <ImageView
        android:id="@+id/img_cuowu_back"
        android:visibility="gone"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/common_icon_close_n"
        android:layout_marginTop="@dimen/dp_280"/>

</RelativeLayout>