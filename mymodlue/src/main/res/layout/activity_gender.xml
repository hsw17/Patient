<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.activity.GenderActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/fanhui"
            android:src="@mipmap/common_icon_back_black_n"
            android:layout_marginLeft="30dp"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp"/>
        <TextView
            android:text="选择性别"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/login_shape_h"
            android:id="@+id/name_button_finish"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12"
            android:text="完成"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_24"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#EBE7E7" />



    <RelativeLayout
        android:layout_marginTop="72dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <CheckBox
            android:button="@null"
            android:id="@+id/boy01"
            android:background="@mipmap/boy"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <ImageView
            android:id="@+id/boy_check01"
            android:layout_width="91dp"
            android:layout_height="21dp"
            android:visibility="gone"
            android:src="@mipmap/selected"
            android:layout_below="@id/boy01"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="15dp"
            />
        <CheckBox
            android:id="@+id/gilr01"
            android:button="@null"
            android:layout_toRightOf="@id/boy01"
            android:layout_marginLeft="@dimen/dp_80"
            android:background="@mipmap/girl"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"/>
        <ImageView
            android:id="@+id/boy_check02"
            android:layout_width="@dimen/dp_91"
            android:layout_height="@dimen/dp_21"
            android:visibility="gone"
            android:src="@mipmap/selected"
            android:layout_below="@id/gilr01"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="@dimen/dp_215"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="男"
            android:textColor="#4fcb8f"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="女"
            android:textColor="#f984a2"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_185"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>