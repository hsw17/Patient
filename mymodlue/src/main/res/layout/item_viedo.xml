<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/liner_view"
    android:background="@drawable/login_shape_a"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <com.dueeeke.videoplayer.player.IjkVideoView
       android:id="@+id/Ijk_view"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_168">

   </com.dueeeke.videoplayer.player.IjkVideoView>
    <LinearLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_178"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#333333"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/text_buyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="#333333"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#333333"
            android:textSize="@dimen/sp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/text_delete"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textColor="#fff"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <ImageView
        android:id="@+id/image_start"
        android:background="@mipmap/common_icon_time_out_n"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36">

    </ImageView>
    <TextView
        android:id="@+id/text_duan_time"
        android:alpha="0.5"
        android:layout_marginTop="@dimen/dp_134"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/sp_12"
        android:textColor="#fff"
        android:background="@drawable/login_shape_x"
        android:gravity="center"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_24">

    </TextView>
</RelativeLayout>