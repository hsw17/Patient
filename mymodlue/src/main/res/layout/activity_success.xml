<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.activity.SuccessActivity">
    <RelativeLayout
        android:id="@+id/relay_layout"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_26">
        <TextView
            android:textStyle="bold"
            android:text="评价成功"
            android:id="@+id/head_text_name"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4">

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <RelativeLayout
        android:background="@mipmap/evaluation_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_152">
        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/evaluation_success"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50">

            </ImageView>
            <TextView
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_35"
                android:text="评价成功，感谢您！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:text="如果您的问题得到解决？送个礼物鼓励一下吧~"
        android:textSize="@dimen/sp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyc_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/button_finish"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center"
                android:background="@drawable/login_shape_d"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>