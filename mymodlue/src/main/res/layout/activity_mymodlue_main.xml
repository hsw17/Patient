<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.My_ModuleMainActivity">
    <ImageView
        android:background="@mipmap/my_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_24">

        <ImageView
            android:id="@+id/head_details_back"
            android:layout_width="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/common_icon_back_white_n" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@mipmap/common_nav_message_white_n"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_50">

        <com.facebook.drawee.view.SimpleDraweeView
            app:placeholderImage="@mipmap/boy"
            app:actualImageScaleType="centerInside"
            app:roundAsCircle="true"
            android:id="@+id/my_image_simple"
            android:background="@mipmap/boy"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"/>

        <TextView
            android:id="@+id/my_text_login"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:text="登录/注册"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/my_button_sing_in"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_14"
                android:text="签到"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/login_shape_a"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_30"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_latiview"
        android:layout_marginTop="@dimen/dp_140"
        android:background="@drawable/login_shape_a"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_180">

        <LinearLayout
            android:id="@+id/linear_lay"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#333333"
                android:textSize="@dimen/sp_16"
                android:text="我的问诊"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/my_button_inquiry"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@id/linear_lay"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/the_current_inquiry"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@mipmap/the_current_inquiry"
                app:roundAsCircle="true" />
            <TextView
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:text="当前问诊"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/my_icon_next_n" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_button_history"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@id/my_button_inquiry"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/historical_inquiry"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@mipmap/historical_inquiry"
                app:roundAsCircle="true" />
            <TextView
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:text="历史问诊"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/my_icon_next_n"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_my"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_236"
        android:orientation="vertical"
        android:layout_below="@id/re_latiview"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_30">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/my_button_record"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/my_icon_file_n"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text="我的档案"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_button_wallet"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/my_icon_wallet_n"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text="我的钱包"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_button_collect"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/common_button_collection_large_n"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text="我的收藏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/my_button_suggest"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/my_icon_advice_n"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text="被采纳建议"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_button_video"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/my_icon_video_n"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text="我的视频"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_button_patients_circle"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/my_icon_circle_n"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text="我的病友圈"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/my_button_attention"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/common_icon_attention_small_n"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text="我的关注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_button_task"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/my_icon_task_n"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text="我的任务"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_button_set"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/my_icon_set_n"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text="设置管理"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear_my"
        android:id="@+id/my_text_title"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>