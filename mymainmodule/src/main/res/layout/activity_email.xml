<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/login_bg"
    android:layout_height="match_parent"
    tools:context=".view.activity.EmailActivity">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_26">
        <TextView
            android:id="@+id/head_text_name"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:text="完善信息"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22" />
    </RelativeLayout>
    <ImageView

        android:background="@mipmap/boy"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_64"/>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:text="请输入邮箱账号"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22" />

        <EditText
            android:textColor="#fff"
            android:id="@+id/head_edit_text"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
    </RelativeLayout>

    <Button
        android:id="@+id/button_finish"
        android:textColor="#2B3BF1"
        android:textSize="@dimen/sp_14"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_shape_a"
        android:text="完成"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>
</RelativeLayout>