<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/login_bg"
    android:layout_height="match_parent"
    tools:context=".view.activity.RegisterActivity">
    <ImageView
        android:background="@mipmap/logon"
        android:layout_marginTop="@dimen/dp_46"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_64"/>

    <RelativeLayout
        android:id="@+id/relate_view"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_348">
        <RelativeLayout
            android:alpha="0.3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_shape_a"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_348">

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"

            android:alpha="0.6"
            android:background="@drawable/login_shape_a"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_345">

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_shape_a"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_340">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <ImageView
                        android:background="@mipmap/login_icon_mail_n"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/register_edit_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请输入邮箱"
                            android:singleLine="true"
                            android:textColorHint="#999999"
                            android:textSize="@dimen/sp_14">

                        </EditText>
                        <Button
                            android:id="@+id/register_button_code"
                            android:textSize="@dimen/sp_10"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#fff"
                            android:background="@drawable/login_shape_c"
                            android:text="获取验证码"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_20"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <ImageView
                        android:background="@mipmap/register_icon_verification_code_n"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"/>

                    <EditText

                        android:id="@+id/register_edit_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入验证码"
                        android:singleLine="true"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14">

                    </EditText>
                </LinearLayout>


                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <RelativeLayout
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24">
                        <ImageView
                            android:id="@+id/register_edit_false"
                            android:background="@mipmap/login_icon_lock_n"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/register_edit_true"
                            android:background="@mipmap/login_icon_unlock_n"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <EditText
                            android:id="@+id/register_edit_pwd"
                            android:maxLength="16"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请输入密码"
                            android:password="true"
                            android:singleLine="true"
                            android:textColorHint="#999999"
                            android:textSize="@dimen/sp_14">

                        </EditText>
                        <ToggleButton
                            android:layout_centerVertical="true"
                            android:id="@+id/register_edit_hine"
                            android:background="@mipmap/login_icon_hide_password_n"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_13"
                            android:disabledAlpha="@android:integer/config_longAnimTime"
                            android:minWidth="@null"
                            android:minHeight="@null"
                            android:text="@null"
                            android:textOff="@null"
                            android:textOn="@null"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <RelativeLayout
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24">
                        <ImageView
                            android:id="@+id/register_edit_false1"
                            android:background="@mipmap/login_icon_lock_n"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/register_edit_true1"
                            android:background="@mipmap/login_icon_unlock_n"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <EditText
                            android:id="@+id/register_edit_pwdl"
                            android:maxLength="16"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请再次输入密码"
                            android:password="true"
                            android:singleLine="true"
                            android:textColorHint="#999999"
                            android:textSize="@dimen/sp_14">

                        </EditText>
                        <ToggleButton
                            android:layout_centerVertical="true"
                            android:id="@+id/register_edit_hine1"
                            android:background="@mipmap/login_icon_hide_password_n"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_13"
                            android:disabledAlpha="@android:integer/config_longAnimTime"
                            android:minWidth="@null"
                            android:minHeight="@null"
                            android:text="@null"
                            android:textOff="@null"
                            android:textOn="@null"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <RelativeLayout
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24">
                        <ImageView

                            android:background="@mipmap/register_icon_invitatiion_code_n"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <EditText
                            android:id="@+id/register_edit_invitationCode"
                            android:maxLength="16"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请输入邀请码"
                            android:password="true"
                            android:singleLine="true"
                            android:textColorHint="#999999"
                            android:textSize="@dimen/sp_14">

                        </EditText>
                        <TextView
                            android:id="@+id/register_edit_xuan"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:text="选填"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/register_edit_register"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="#fff"
                android:background="@drawable/login_shape_c"
                android:text="注册"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/dp_230"
                android:layout_height="@dimen/dp_36"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>