<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.InqueryActivity">

                <RelativeLayout
                    android:id="@+id/inr1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="#fff">
                    <ImageView
                        android:id="@+id/backimage"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="match_parent"
                        android:src="@mipmap/common_icon_back_black_n"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:padding="@dimen/dp_3">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医生详情"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/sp_12">
                    </TextView>

                </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_40">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="#fff">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_400"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/doctro_image"
                            android:layout_width="@dimen/dp_128"
                            android:layout_height="@dimen/dp_175" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_175"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/liner1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/doctor_simple"
                                android:layout_marginTop="@dimen/dp_5"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/docnames"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:text="周杰伦"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    android:id="@+id/zhiweis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:text="主治医生"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_10" />

                                <ImageView
                                    android:id="@+id/guanzhu"
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="@dimen/dp_30"
                                    android:layout_marginRight="@dimen/dp_30"
                                    android:src="@mipmap/common_icon_attention_large_n" />

                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/relat1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_24"
                                android:layout_below="@id/liner1"
                                android:layout_marginTop="@dimen/dp_5">

                                <TextView
                                    android:id="@+id/addresse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:text="东升福建保健医院"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_12" />

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/liner2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/relat1"
                                android:layout_marginTop="@dimen/dp_5">

                                <TextView
                                    android:id="@+id/haopings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:text="周杰伦"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/huanmbers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:text="主治医生"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_10" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_5"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_2"
                                    android:layout_height="@dimen/dp_14"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:background="#3349D3" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text="他收到的礼物"
                                    android:textColor="#333333" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/dp_5"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.facebook.drawee.view.SimpleDraweeView
                                        android:id="@+id/xianhua"
                                        android:layout_width="@dimen/dp_44"
                                        android:layout_height="@dimen/dp_44"
                                        android:layout_gravity="center"
                                        android:background="@mipmap/gift_flower" />

                                    <TextView
                                        android:id="@+id/xianhuanum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/dp_2"
                                        android:text="0"
                                        android:textColor="#333333"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.facebook.drawee.view.SimpleDraweeView
                                        android:id="@+id/jiangzhang"
                                        android:layout_width="@dimen/dp_44"
                                        android:layout_height="@dimen/dp_44"
                                        android:layout_gravity="center"
                                        android:background="@mipmap/gift_certificate" />

                                    <TextView
                                        android:id="@+id/jiangzhangnum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/dp_2"
                                        android:text="0"
                                        android:textColor="#333333"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.facebook.drawee.view.SimpleDraweeView
                                        android:id="@+id/jiangbei"
                                        android:layout_width="@dimen/dp_44"
                                        android:layout_height="@dimen/dp_44"
                                        android:layout_gravity="center"
                                        android:background="@mipmap/gift_cup" />

                                    <TextView
                                        android:id="@+id/jiangbeinum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/dp_2"
                                        android:text="0"
                                        android:textColor="#333333"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/dp_2"
                                android:layout_height="@dimen/dp_14"
                                android:layout_gravity="center"
                                android:background="#3349D3" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="个人简介"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/jianjie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#333333">

                        </TextView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/dp_2"
                                android:layout_height="@dimen/dp_14"
                                android:layout_gravity="center"
                                android:background="#3349D3" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="擅长领域"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/lingyu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#333333">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_14"
                    android:background="#3349D3"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="用户评价"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior = "@string/appbar_scrolling_view_behavior"
            android:padding="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pinglun"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_500">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_reviews"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:text="500H币/1次"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/btn_seat"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btn_reviews"
            android:background="#A086CA"
            android:text="立即咨询"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>



</RelativeLayout>